# =============================================================================
# üêã WHALEWAVE PRO ULTRA TITAN EDITION v12.0 - Environment Configuration
# =============================================================================
# Copy this file to .env and add your actual API keys

# =============================================================================
# ü§ñ AI CONFIGURATION (Required)
# =============================================================================
# Google Gemini API Key for AI-powered trading analysis
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# üí± BYBIT API CONFIGURATION (For Live Trading)
# =============================================================================
# Bybit API credentials for live trading
# Get these from: https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# Set to true for testing, false for live trading
BYBIT_TESTNET=true

# =============================================================================
# üè¶ BINANCE API CONFIGURATION (Future Support)
# =============================================================================
# Binance API credentials (optional - future integration)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# =============================================================================
# üìä CORE TRADING SETTINGS
# =============================================================================
# Trading symbol (e.g., BTCUSDT, ETHUSDT)
SYMBOL=BTCUSDT

# Exchange selection: 'binance' or 'bybit'
EXCHANGE=bybit

# Enable live trading (false = simulation mode)
LIVE_TRADING=false

# Initial balance for paper trading
INITIAL_BALANCE=1000.00

# =============================================================================
# ‚ö†Ô∏è RISK MANAGEMENT
# =============================================================================
# Risk per trade as percentage
RISK_PERCENT=0.75

# Maximum drawdown percentage
MAX_DRAWDOWN=6.0

# Daily loss limit percentage
DAILY_LOSS_LIMIT=3.0

# Maximum leverage cap
LEVERAGE_CAP=20

# Maximum position size as percentage of balance
MAX_POSITION_SIZE=0.25

# =============================================================================
# üß† NEURAL NETWORK SETTINGS
# =============================================================================
NEURAL_ENABLED=true
NEURAL_CONFIDENCE=0.85

# =============================================================================
# ‚ö° PERFORMANCE OPTIMIZATION
# =============================================================================
# Optimize for: SPEED or MEMORY
OPTIMIZE_FOR=SPEED

# Main loop delay in milliseconds (250ms for ultra-fast)
LOOP_DELAY=250

# Maximum retry attempts for API calls
MAX_RETRIES=3

# =============================================================================
# üåê WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_ENABLED=true
RECONNECT_INTERVAL=1000

# =============================================================================
# üìù LOGGING & DEBUGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_FILE=true

# HUD Display
ENABLE_HUD=true

# Performance Metrics
ENABLE_PERFORMANCE_METRICS=true